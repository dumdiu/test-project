{
  "name": "test-project-dumdiu",
  "description": "Test Project",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "transpile": "babel --source-maps inline src --out-dir lib",
    "build": "npm run clean && npm run transpile",
    "commit": "git-cz",
    "commita": "git add . && git status && git-cz",
    "lint": "esw src test",
    "watch:lint": "npm run lint -- -w",
    "test": "mocha",
    "cover": "babel-node $(npm bin)/isparta cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release pre && npm run build && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dumdiu/test-project.git"
  },
  "author": "dumdiu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dumdiu/test-project/issues"
  },
  "homepage": "https://github.com/dumdiu/test-project#readme",
  "dependencies": {
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "commitizen": "^2.8.1",
    "coveralls": "^2.11.9",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^2.11.1",
    "eslint-watch": "^2.1.11",
    "ghooks": "^1.2.1",
    "isparta": "^4.0.0",
    "mocha": "^2.5.3",
    "mocha-lcov-reporter": "^1.2.0",
    "rimraf": "^2.5.2",
    "semantic-release": "^4.3.5"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm test"
    }
  }
}
